{
  "manifest_version": 3,
  "name": "SmartFilter",
  "version": "1.0",
  "description": "Filter e-commerce search results using AI",
  "permissions": ["activeTab", "scripting", "storage", "webRequest"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.leboncoin.fr/*"],
      "js": [
        "vendors/vendor-interface.js",
        "vendors/leboncoin.js",
        "src/content/content-core.js",
        "src/content/content.js"
      ],
      "css": ["src/content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/images/**/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
